{
  "name": "legal-assistant",
  "type": "module",
  "version": "1.0.0",
  "description": "Legal Assistant with Astro SSR",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run sync-factories && astro build && node ./bundle-dependencies.js && cd functions && npm install",
    "preview": "astro preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting,functions:astroSSR",
    "sync-factories": "node scripts/sync-entity-factories.cjs",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/node": "^9.1.0",
    "astro": "^5.1.5",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.5.0",
    "piccolore": "^0.1.3",
    "simple-datatables": "^10.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "typescript": "^5.7.2"
  }
}
