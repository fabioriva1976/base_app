{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Legge",
  "description": "Schema per le leggi nella collezione 'leggi'",
  "type": "object",
  "required": ["codiceRedazionale", "titolo", "dataDownload", "stato"],
  "properties": {
    "codiceRedazionale": {
      "type": "string",
      "description": "Codice redazionale della legge (es: '025U0081')"
    },
    "dataGU": {
      "type": "string",
      "format": "date",
      "description": "Data di pubblicazione in Gazzetta Ufficiale (formato ISO)"
    },
    "numeroAtto": {
      "type": "string",
      "description": "Numero dell'atto"
    },
    "titolo": {
      "type": "string",
      "description": "Titolo della legge"
    },
    "dataDownload": {
      "type": "string",
      "format": "date-time",
      "description": "Data di download in formato ISO 8601"
    },
    "stato": {
      "type": "string",
      "description": "Stato del download",
      "enum": ["scaricato", "errore", "in_elaborazione"]
    },
    "storageFilePath": {
      "type": "string",
      "description": "Percorso del file .txt in Storage (es: 'leggi/025U0081.txt')"
    }
  }
}
