---
import { canAccessConfig, canManageUsers } from '../lib/roles';

const currentPath = Astro.url.pathname;
const { user } = Astro.locals;

const profileItems = [
  {
    href: '/profile',
    label: 'Il Mio Profilo',
    icon: `<path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>`,
    visible: true
  },
  {
    href: '/users',
    label: 'Utenti',
    icon: `<path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>`,
    visible: canManageUsers(user)
  },
  {
    href: '/settings-smtp',
    label: 'SMTP',
    icon: `<path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>`,
    visible: canAccessConfig(user)
  },
  {
    href: '/settings-ai',
    label: 'Agenti AI',
    icon: `<path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>`,
    visible: canAccessConfig(user)
  }
].filter(item => item.visible);
---

<aside class="sidebar">
  <div class="sidebar-header">
    <h2 class="logo">Profilo</h2>
  </div>

  <nav>
    <ul class="nav-menu">
      {profileItems.map(item => (
        <li>
          <a href={item.href} class={currentPath === item.href ? 'active' : ''}>
            <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <Fragment set:html={item.icon} />
            </svg>
            <span>{item.label}</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <nav class="nav-bottom">
    <ul class="nav-menu">
      <li>
        <a href="/dashboard" id="back-to-app-btn">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          <span>Torna all'App</span>
        </a>
      </li>
      <li>
        <a href="#" id="logout-btn">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          <span>Logout</span>
        </a>
      </li>
    </ul>
  </nav>
</aside>

<script>
  import { initLogoutButton } from '../lib/logout';

  // Inizializza il pulsante di logout
  initLogoutButton('logout-btn');
</script>
