---
import { SITE_NAME } from '../lib/site';
import { hasPermission } from '../../shared/utils/permissions';

const currentPath = Astro.url.pathname;
const shortName = SITE_NAME ? SITE_NAME.charAt(0) : '';
const user = Astro.locals.user;
const userRole = user?.ruolo;

// Voci principali dell'app
const allNavItems = [
  {
    href: '/dashboard',
    label: 'Dashboard',
    icon: `<path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>`,
    permission: 'canViewDashboard'
  },
  {
    href: '/anagrafica-clienti',
    label: 'Clienti',
    icon: `<path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>`,
    permission: 'canViewClienti'
  }
];

// Filtra le voci in base ai permessi dell'utente
const navItems = allNavItems.filter(item =>
  hasPermission(userRole, item.permission as any)
);
---

<aside class="sidebar">
    <div class="sidebar-header">
        <h2 class="logo">
            <span class="logo-full">{SITE_NAME}</span>
            <span class="logo-short" aria-hidden="true">{shortName}</span>
        </h2>
    </div>

    <nav>
        <ul class="nav-menu">
            {navItems.map(item => (
                <li>
                    <a href={item.href} class={currentPath === item.href ? 'active' : ''}>
                        <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <Fragment set:html={item.icon} />
                        </svg>
                        <span>{item.label}</span>
                    </a>
                </li>
            ))}
        </ul>
    </nav>

    <nav class="nav-bottom">
        <ul class="nav-menu">
            <li>
                <a href="#" id="logout-btn">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>
</aside>

<script>
  import { initLogoutButton } from '../lib/logout';

  // Inizializza il pulsante di logout
  initLogoutButton('logout-btn');
</script>
