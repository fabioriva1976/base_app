---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
---

<BaseLayout title="Accesso Negato">
  <Sidebar slot="sidebar" />
  <div class="container error-404-container">
    <section>
      <h1 class="error-404-title">Accesso Negato</h1>
      <h2 class="error-404-subtitle">Permessi insufficienti</h2>
      <p class="error-404-text">
        Non hai i permessi necessari per accedere a questa pagina.
      </p>
      <p class="error-404-text">
        Se ritieni di dover avere accesso, contatta l'amministratore di sistema.
      </p>
      <a href="/dashboard" class="btn">
        <span class="btn-text">Torna alla Dashboard</span>
      </a>
    </section>
  </div>
</BaseLayout>
