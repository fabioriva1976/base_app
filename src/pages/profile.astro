---
import ProfileLayout from '../layouts/ProfileLayout.astro';
import { getRoleLabel } from '../lib/roles';

const { user } = Astro.locals;
const roleLabel = getRoleLabel(user?.ruolo);
---

<ProfileLayout title="Il Mio Profilo - AI Legal Assistant">
  <div class="container parser-container">
    <section>
        <div class="header">
            <h1>Il Mio Profilo</h1>
        </div>
        <p class="form-description">Gestisci i tuoi dati personali e aggiorna le credenziali di accesso</p>
    </section>

    <div class="config-card">
        <div class="config-section">
            <h2>Dati personali</h2>
            <p class="description">Modifica le informazioni di contatto utilizzate dall'applicazione.</p>

            <form id="profile-form">
                <input type="hidden" id="profile-user-id">

                <div class="form-row">
                    <div class="form-group">
                        <label for="profile-nome">Nome</label>
                        <input type="text" id="profile-nome" required>
                    </div>
                    <div class="form-group">
                        <label for="profile-cognome">Cognome</label>
                        <input type="text" id="profile-cognome">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="profile-email">Email</label>
                        <input type="email" id="profile-email" required>
                    </div>
                    <div class="form-group">
                        <label for="profile-telefono">Telefono</label>
                        <input type="text" id="profile-telefono" placeholder="+39 333 1234567">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="profile-ruolo">Ruolo</label>
                        <input type="text" id="profile-ruolo" value={roleLabel} disabled>
                    </div>
                </div>

                <div class="config-section">
                    <h3>Credenziali di accesso</h3>
                    <p class="description">Imposta una nuova password se vuoi aggiornarla. Lascia vuoto per mantenere quella attuale.</p>
                    <div class="form-group">
                        <label for="profile-password">Nuova Password</label>
                        <input type="password" id="profile-password" placeholder="••••••••">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Salva Modifiche</button>
                    <span id="profile-save-message" class="save-message"></span>
                </div>
            </form>
        </div>
    </div>
  </div>
</ProfileLayout>

<script>
  import { initProfilePage } from '../scripts/profile.js';
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProfilePage);
  } else {
    initProfilePage();
  }
</script>
