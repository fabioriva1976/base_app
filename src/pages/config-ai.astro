---
import ProfileLayout from '../layouts/ProfileLayout.astro';
import { canAccessConfig } from '../lib/roles';

const { user } = Astro.locals;

// Solo superuser può accedere alle configurazioni (visualizzazione read-only per admin)
// Se non è autenticato o non ha almeno ruolo admin, redirect
if (!user || (!canAccessConfig(user) && user.ruolo !== 'admin')) {
  return Astro.redirect('/access-denied');
}

const canModify = canAccessConfig(user);
---

<ProfileLayout title="Configurazione AI - AI Legal Assistant">
  <div class="container parser-container">
    <section>
        <div class="header">
            <h1>Configurazione Agent AI</h1>
        </div>
        <p class="form-description">Configura l'intelligenza artificiale e i modelli generativi per il tuo assistente virtuale</p>
    </section>

    <div class="config-card">
        <div class="config-section">
            <h2>Provider e Modello</h2>
            <p class="description">Seleziona il provider AI e il modello da utilizzare per le interazioni con l'assistente.</p>

            <form id="ai-config-form" data-can-modify={canModify ? 'true' : 'false'}>
                <div class="form-group">
                    <label for="ai-provider">Provider AI *</label>
                    <select id="ai-provider" name="provider" class="form-control" required>
                        <option value="google">Google AI (Gemini)</option>
                        <option value="openai">OpenAI (GPT)</option>
                        <option value="anthropic">Anthropic (Claude)</option>
                        <option value="azure">Azure OpenAI</option>
                    </select>
                    <small class="help-text">Seleziona il fornitore del servizio AI</small>
                </div>

                <div class="form-group">
                    <label for="ai-api-key">API Key *</label>
                    <input type="password" id="ai-api-key" name="apiKey" class="form-control" placeholder="sk-xxxxx o AIzaSyxxxxx" required>
                    <small class="help-text">Chiave API del provider selezionato</small>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="ai-model">Modello *</label>
                        <select id="ai-model" name="model" class="form-control" required>
                            <optgroup label="Google AI - Gemini">
                                <option value="gemini-1.5-pro">Gemini 1.5 Pro (Consigliato)</option>
                                <option value="gemini-1.5-flash">Gemini 1.5 Flash</option>
                                <option value="gemini-2.5-pro">Gemini 2.5 Pro (Beta)</option>
                                <option value="gemini-2.5-flash">Gemini 2.5 Flash (Beta)</option>
                            </optgroup>
                            <optgroup label="OpenAI">
                                <option value="gpt-4">GPT-4</option>
                                <option value="gpt-3.5-turbo">GPT-3.5 Turbo</option>
                            </optgroup>
                            <optgroup label="Anthropic">
                                <option value="claude-3-opus">Claude 3 Opus</option>
                                <option value="claude-3-sonnet">Claude 3 Sonnet</option>
                            </optgroup>
                        </select>
                        <small class="help-text">Modello AI da utilizzare</small>
                    </div>
                    <div class="form-group">
                        <label for="ai-temperature">Temperature</label>
                        <input type="number" id="ai-temperature" name="temperature" class="form-control" min="0" max="2" step="0.1" value="0.7">
                        <small class="help-text">Creatività delle risposte (0-2)</small>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="ai-max-tokens">Max Tokens</label>
                        <input type="number" id="ai-max-tokens" name="maxTokens" class="form-control" placeholder="2048" value="2048">
                        <small class="help-text">Lunghezza massima risposta</small>
                    </div>
                    <div class="form-group">
                        <label for="ai-timeout">Timeout (secondi)</label>
                        <input type="number" id="ai-timeout" name="timeout" class="form-control" placeholder="30" value="30">
                        <small class="help-text">Timeout per richieste API</small>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ai-system-prompt">System Prompt</label>
                    <textarea id="ai-system-prompt" name="systemPrompt" class="form-control" rows="4" placeholder="Sei un assistente virtuale...">Sei un assistente virtuale intelligente che aiuta gli utenti con le loro richieste in modo professionale e cortese.</textarea>
                    <small class="help-text">Istruzioni di sistema per l'AI</small>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="ai-rag-corpus-id">RAG Corpus ID</label>
                        <input type="text" id="ai-rag-corpus-id" name="ragCorpusId" class="form-control" placeholder="1234567890">
                        <small class="help-text">ID del corpus Vertex AI RAG (solo numerico)</small>
                    </div>
                    <div class="form-group">
                        <label for="ai-rag-location">RAG Location</label>
                        <input type="text" id="ai-rag-location" name="ragLocation" class="form-control" placeholder="europe-west1" value="europe-west1">
                        <small class="help-text">Regione del RAG corpus</small>
                    </div>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="ai-enable-context" name="enableContext" checked>
                        <span>Mantieni contesto conversazione</span>
                    </label>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="ai-enable-safety" name="enableSafety" checked>
                        <span>Abilita filtri di sicurezza</span>
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <span class="btn-text">Salva Configurazione</span>
                    </button>
                    <button type="button" id="test-ai-btn" class="btn btn-secondary">
                        Test AI
                    </button>
                    <span id="save-message" class="save-message"></span>
                </div>

                <div id="form-message" class="form-message" style="display: none;"></div>
            </form>
        </div>

        <div class="config-section status-section">
            <h2>Stato Configurazione</h2>
            <div id="status-container">
                <div class="status-item">
                    <span class="status-label">Provider:</span>
                    <span id="status-provider" class="status-value">Non configurato</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Modello:</span>
                    <span id="status-model" class="status-value">-</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Temperature:</span>
                    <span id="status-temperature" class="status-value">-</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Max Tokens:</span>
                    <span id="status-maxTokens" class="status-value">-</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Ultima modifica:</span>
                    <span id="status-updatedAt" class="status-value">-</span>
                </div>
            </div>
        </div>
    </div>
  </div>
</ProfileLayout>

<script>
  import { initConfigAiPage } from '../scripts/config-ai.js';
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initConfigAiPage);
  } else {
    initConfigAiPage();
  }
</script>

<style>
  .config-card .form-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: nowrap;
  }
  .config-card .form-actions .save-message {
    margin-left: 12px;
    white-space: nowrap;
    min-width: 180px;
    text-align: left;
    display: none;
  }
  .config-card .form-actions .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
</style>
