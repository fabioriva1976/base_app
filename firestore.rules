rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ═══════════════════════════════════════════════════════════════════════
    // FUNZIONI HELPER PER I RUOLI
    // ═══════════════════════════════════════════════════════════════════════

    // Verifica se il documento utente esiste
    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Ottiene il ruolo dell'utente corrente dalla collezione users
    // Restituisce un array vuoto se il documento non esiste
    function getUserRole() {
      return userDocExists()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.ruolo
        : [];
    }

    // Verifica se un ruolo è presente nell'array dei ruoli
    function hasRole(role) {
      return userDocExists() && getUserRole().hasAny([role]);
    }

    // Verifica se l'utente è superuser
    function isSuperUser() {
      return request.auth != null && hasRole('superuser');
    }

    // Verifica se l'utente è admin o superuser
    function isAdmin() {
      return request.auth != null && userDocExists() && getUserRole().hasAny(['admin', 'superuser']);
    }

    // Verifica se l'utente è operatore, admin o superuser (qualsiasi utente autenticato con ruolo)
    function isOperator() {
      return request.auth != null && userDocExists() && getUserRole().hasAny(['operatore', 'admin', 'superuser']);
    }

    // Verifica che l'email sia presente e valida nel documento utente
    function hasValidUserEmail() {
      return request.resource.data.email is string
        && request.resource.data.email.size() > 0
        && request.resource.data.email.matches('^.+@.+\\..+$');
    }

    function hasUserSystemFields() {
      return request.resource.data.status is bool
        && request.resource.data.created is string
        && request.resource.data.changed is string
        && request.resource.data.lastModifiedBy is string
        && request.resource.data.lastModifiedByEmail is string
        && request.resource.data.lastModifiedByEmail.size() > 0;
    }

    // ═══════════════════════════════════════════════════════════════════════
    // COLLEZIONE UTENTI
    // ═══════════════════════════════════════════════════════════════════════
    match /users/{userId} {
      // Chiunque sia autenticato può leggere il profilo di un altro utente (necessario per funzioni come getUserRole).
      allow get: if request.auth != null;

      // Permetti la lettura lista a tutti gli utenti autenticati (per real-time stores)
      // Nota: gli operatori devono poter vedere la lista utenti nella UI
      allow list: if request.auth != null;

      // Un utente può creare/aggiornare solo il proprio profilo
      // Admin/Superuser possono creare/aggiornare qualsiasi profilo
      // IMPORTANTE: create permette self-registration senza controllare isAdmin()
      allow create: if ((request.auth != null && request.auth.uid == userId)
        || isAdmin()) && hasValidUserEmail() && hasUserSystemFields();
      allow update: if ((request.auth != null && request.auth.uid == userId)
        || isAdmin()) && hasValidUserEmail() && hasUserSystemFields();

      // Solo admin può eliminare
      allow delete: if isAdmin();
    }

    // ═══════════════════════════════════════════════════════════════════════
    // REGOLA DI FALLBACK - NEGA TUTTO IL RESTO
    // ═══════════════════════════════════════════════════════════════════════
    match /{document=**} {

      // COLLEZIONE SETTINGS (SMTP, AI, ecc.)
      // ⚠️ CONTIENE DATI SENSIBILI: API keys, password SMTP, secrets
      match /settings/{configId} {
        // Lettura: SOLO superuser (non admin, non operatori)
        // Le Cloud Functions hanno accesso admin e possono sempre leggere
        allow read: if isSuperUser();

        // Scrittura: SOLO superuser
        allow write: if isSuperUser();
      }

      // COLLEZIONE ANAGRAFICA CLIENTI
      match /anagrafica_clienti/{clientId} {
        // Lettura: permessa a tutti gli utenti autenticati (per dettagli singolo cliente).
        allow read: if request.auth != null;

        // Scrittura (create, update, delete) e lettura di liste bloccate.
        // Queste operazioni devono passare obbligatoriamente tramite le Cloud Functions.
        allow write, list: if false;
      }

      // COLLEZIONE ATTACHMENTS
      match /attachments/{attachmentId} {
        // Lettura permessa a tutti gli utenti autenticati.
        allow read: if request.auth != null;

        // Scrittura (create, update, delete) NON permessa ai client.
        // Le modifiche devono passare obbligatoriamente tramite le Cloud Functions,
        // che contengono la logica di validazione e i controlli sui permessi.
        allow write: if false;
      }

      // COLLEZIONE COMMENTS
      match /comments/{commentId} {
        // Lettura permessa a tutti gli utenti autenticati.
        allow read: if request.auth != null;

        // Scrittura (create, update, delete) NON permessa ai client.
        // Le modifiche devono passare obbligatoriamente tramite le Cloud Functions,
        // che contengono la logica di validazione e i controlli sui permessi.
        allow write: if false;
      }

      // COLLEZIONE AUDIT LOGS
      match /audit_logs/{logId} {
        // Lettura: solo admin e superuser
        allow read: if isAdmin();

        // Scrittura: NEGATA (i log vengono scritti solo server-side)
        allow write: if false;
      }

      // REGOLA DI FALLBACK - Nega tutto ciò che non è stato esplicitamente permesso sopra.
      allow read, write: if false;
    }
  }
}
